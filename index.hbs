{{!< default}}
{{#contentFor 'pageScripts'}}
<script>
var article = {
    origin: 'top',
    delay    : 150,
    easing   : 'cubic-bezier(0.6, 0.2, 0.1, 1)',
    rotate   : { x: 5 },
    opacity: 0,
    scale: 1,
    useDelay: 'once'
};
window.sr = ScrollReveal().reveal('.article-header, .article-excerpt, .article-meta, .pagination', article, 50)
</script>
{{/contentFor}}
{{#if blog.navigation}}
<span class="nav-cover"></span>
<div class="nav">
    <h3 class="nav-title">Home</h3>
    <a href="#" class="nav-close">
        <span class="hidden">Close</span>
    </a>
    <ul>
        {{#each blog.navigation}}
        <li class="nav-home " role="presentation"><a href="{{url}}">{{name}}</a></li>
        {{/each}}
    </ul>
    {{!-- <a class="subscribe-button icon-feed" href="{{url}}">Subscribe</a> --}}
</div>
{{/if}}
<div class="site-wrapper">
    <header class="main-header {{#if blog.cover}}no-cover" style="background-image: url({{blog.cover}}){{else}}no-cover{{/if}}">
        <nav class="main-nav overlay clearfix">
            {{#if blog.logo}}
                <a class="blog-logo" href="{{blog.url}}"><img src="{{blog.logo}}" alt="{{blog.title}}" /></a>
            {{/if}}
            {{#if blog.navigation}}
                <a class="menu-button icon-caidan iconfont">
                    <span class="word">Menu</span>
                </a>
            {{/if}}
        </nav>
        <div class="vertical">
            <div class="main-header-content inner">
                <h1 class="page-title">{{blog.title}}</h1>
                <h2 class="page-description">{{blog.description}}</h2>
            </div>
        </div>
        <a class="scroll-down icon-arrow-left" href="#content" data-offset="-45"><span class="hidden">Scroll Down</span></a>
    </header>
    <main id="content" class="content" role="main">
        {{> loop}}
        {{> pagination}}
    </main>
    {{> footer}}
</div>