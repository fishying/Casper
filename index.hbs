{{!< default}}
{{#contentFor 'pageScripts'}}
<script>
var article = {
    origin: 'top',
    delay    : 150,
    easing   : 'cubic-bezier(0.6, 0.2, 0.1, 1)',
    rotate   : { x: 5 },
    opacity: 0,
    scale: 1
};
window.sr = ScrollReveal().reveal('article.article, .article-header, .article-excerpt, .article-meta, .pagination', article, 50)
</script>
{{/contentFor}}
<header class="main-header {{#if blog.cover}}" style="background-image: url({{blog.cover}}){{else}}no-cover{{/if}}">
    <nav class="main-nav overlay clearfix">
        {{#if blog.logo}}
            <a class="blog-logo" href="{{blog.url}}"><img src="{{blog.logo}}" alt="{{blog.title}}" /></a>
        {{/if}}
        {{#if blog.navigation}}
            <ul class="test">123</ul>
        {{/if}}
    </nav>
    <div class="vertical">
        <div class="main-header-content inner">
            <h1 class="page-title">{{blog.title}}</h1>
            <h2 class="page-description">{{blog.description}}</h2>
        </div>
    </div>
    <a class="scroll-down icon-arrow-left" href="#content" data-offset="-45"><span class="hidden">Scroll Down</span></a>
</header>
<main id="content" class="content" role="main">
    {{> loop}}
    {{> pagination}}
</main>