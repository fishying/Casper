{{#if article}}
    {{#each article}}
        <article class="article">
            <header class="article-header">
                <h2 class="article-title"><a href="/{{slug}}">{{title}}</a></h2>
            </header>
            <section class="article-excerpt">
                <p>
                    {{excerpt tailor=60}}<a class="read-more" href="/{{slug}}">»</a>
                </p>
            </section>
            <footer class="article-meta">
                {{#if author.image}}<img class="author-thumb" src="{{author.image}}" alt="{{author.name}}" nopin="nopin" />{{/if}}
                <a href="/author/{{author.slug}}">{{author.name}}</a>
                {{#if tag.length}}
                    on
                    {{#each tag}}
                    <a href="/tag/{{slug}}">{{name}}</a>
                    {{/each}}
                {{/if}}
                <time class="article-date" datetime="{{date format="YYYY-MM-DD"}}">{{date now=true}}</time>
            </footer>
        </article>
    {{/each}}
{{else}}
<h2 style="text-align: center">没有文章</h2>
{{/if}}